{
  "name": "docminer",
  "version": "0.1.3",
  "description": "Generate markdown docs from URLs via CLI. Good for AI.",
  "license": "MIT",
  "type": "module",
  "private": false,
  "bin": {
    "docminer": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": "./dist/cli.js",
    "./cli": "./dist/cli.js",
    "./scraper": "./dist/scraper.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsurgcom/docminer.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts ./src/scraper.ts --outdir dist --target bun --format esm --sourcemap --external playwright --external playwright-core --external chromium-bidi --external electron",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "lint": "bun x ultracite check",
    "format": "bun x ultracite fix",
    "prepare": "bun run build"
  },
  "keywords": [
    "documentation",
    "scraper",
    "markdown",
    "crawler",
    "cli",
    "docs",
    "ai"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=3.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "ultracite": "7.0.11"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@types/jsdom": "^27.0.0",
    "@types/turndown": "^5.0.6",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  }
}
