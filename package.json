{
  "name": "docminer",
  "version": "1.0.0",
  "description": "Generate markdown docs from URLs via CLI. Good for AI.",
  "license": "MIT",
  "type": "module",
  "private": false,
  "bin": {
    "docminer": "dist/cli.js"
  },
  "main": "./dist/cli.js",
  "exports": {
    ".": "./dist/cli.js",
    "./cli": "./dist/cli.js",
    "./scraper": "./dist/scraper.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsurgcom/docminer.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/scraper.ts src/workers/markdown-worker.ts src/workers/hybrid-html-worker.ts --format esm --target node18 --sourcemap --out-dir dist --external playwright --external playwright-core --external chromium-bidi --external electron --splitting false",
    "dev": "node dist/cli.js",
    "test": "npm run build && vitest run",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "documentation",
    "scraper",
    "markdown",
    "crawler",
    "cli",
    "docs",
    "ai"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.2.1",
    "tsup": "^8.5.1",
    "ultracite": "7.0.11",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@types/jsdom": "^27.0.0",
    "@types/turndown": "^5.0.6",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  }
}
